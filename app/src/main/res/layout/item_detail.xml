<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameDetailLayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <com.github.rahatarmanahmed.cpv.CircularProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/progress_tweet_view"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_width="40dp"
        app:cpv_animAutostart="true"
        app:cpv_indeterminate="true" />

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_detail"
        android:name="br.lehmann.socialbase.ItemDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="br.lehmann.socialbase.ItemDetailActivity"
        tools:listitem="@layout/item_list_content"></android.support.v7.widget.RecyclerView>
</FrameLayout>